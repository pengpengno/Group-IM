<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>

<?import io.github.palexdev.mfxresources.fonts.MFXFontIcon?>
<?import javafx.geometry.Insets?>
<BorderPane fx:id="rootpane" xmlns:fx="http://javafx.com/fxml" fx:controller="com.github.im.group.gui.controller.desktop.DesktopMainView">

    <!-- 顶部窗口控制栏 -->
    <top>
        <HBox fx:id="windowHeader" alignment="CENTER_RIGHT" prefHeight="50.0" spacing="10.0">
            <padding>
                <Insets right="10.0"/>
            </padding>
            <MFXFontIcon fx:id="alwaysOnTopIcon" description="fas-circle" size="15.0" styleClass="always-on-top-icon"/>
            <MFXFontIcon fx:id="minimizeIcon" description="fas-circle" size="15.0" styleClass="minimize-icon"/>
            <MFXFontIcon fx:id="closeIcon" description="fas-circle" size="15.0" styleClass="close-icon"/>
        </HBox>
    </top>

    <!-- 左侧菜单栏 -->
    <left>
        <VBox fx:id="iconMenu" spacing="10.0" prefWidth="80.0" alignment="CENTER">
            <!-- 这里的按钮会由 MainController 初始化 -->
        </VBox>
    </left>

    <!-- 中央区域 -->
    <center>
        <VBox>
            <!-- 会话列表 -->
<!--            <ListView fx:id="conversationList" VBox.vgrow="ALWAYS" style="-fx-pref-height: 200;"/>-->

            <!-- 聊天界面 -->
            <StackPane fx:id="chatPane" VBox.vgrow="ALWAYS" style="-fx-padding: 10;">
                <VBox spacing="5">
                    <!-- 聊天内容显示 -->
                    <TextArea fx:id="chatContent" editable="false" prefHeight="200"/>

                    <!-- 消息输入框和发送按钮 -->
                    <HBox spacing="5">
                        <TextField fx:id="messageInput" HBox.hgrow="ALWAYS" promptText="Type a message..."/>
                        <MFXButton fx:id="sendMessageButton" text="Send"/>
                    </HBox>
                </VBox>
            </StackPane>
        </VBox>
    </center>

</BorderPane>
