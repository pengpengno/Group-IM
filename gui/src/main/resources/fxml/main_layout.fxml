<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import io.github.palexdev.mfxresources.fonts.MFXFontIcon?>
<?import com.gluonhq.charm.glisten.mvc.View?>
<?import com.gluonhq.charm.glisten.control.Avatar?>
<View fx:id="rootPane" xmlns:fx="http://javafx.com/fxml"
      stylesheets="@/css/Demo.css"
      fx:controller="com.github.im.group.gui.views.MainPresenter">
    <GridPane>
    <!-- 设置 GridPane 列和行的约束 -->
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES"/>
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints vgrow="ALWAYS"/>
    </rowConstraints>

    <!-- 左侧菜单栏 -->
    <VBox fx:id="iconMenu" VBox.vgrow="ALWAYS" style="-fx-background-color: #2196F3;" prefWidth="53.0"
          GridPane.columnIndex="0"
          alignment="TOP_CENTER"
          GridPane.rowIndex="0" >
        <!-- 头像 -->
<!--        <ImageView fx:id="avatar"  fitWidth="50" fitHeight="50" />-->
        <Avatar fx:id="avatar"/>

        <!-- 这里的按钮会由 Controller 初始化 -->
    </VBox>

    <!-- 右侧区域 (BorderPane) -->
    <BorderPane fx:id="borderPane" GridPane.columnIndex="1" GridPane.rowIndex="0">
        <!-- 顶部窗口控制栏 -->
        <top>
            <HBox fx:id="windowHeader" alignment="CENTER_RIGHT" prefHeight="30.0" spacing="10.0">
                <padding>
                    <Insets right="10.0"/>
                </padding>
<!--                <MFXFontIcon fx:id="alwaysOnTopIcon" description="fas-circle" size="15.0" styleClass="always-on-top-icon"/>-->
<!--                <MFXFontIcon fx:id="minimizeIcon" description="fas-circle" size="15.0" styleClass="minimize-icon"/>-->
<!--                <MFXFontIcon fx:id="closeIcon" description="fas-circle" size="15.0" styleClass="close-icon"/>-->
            </HBox>
        </top>

    </BorderPane>
    </GridPane>
</View>
