{
  "name": "group-electron-im",
  "version": "1.0.0",
  "description": "跨平台IM即时通讯客户端 - Electron版",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run build:main -- --watch\" \"npm run build:renderer -- --watch\" \"cross-env NODE_ENV=development electron .\"",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "webpack --config webpack.config.js",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "dist": "electron-builder --dir",
    "web": "webpack serve --config web.webpack.config.js",
    "build:web": "webpack --config web.webpack.config.js",
    "serve:web": "node server.js",
    "kill-ports": "node scripts/kill-port.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "check-deps": "node scripts/install-deps.js",
    "install-all": "npm run check-deps",
    "setup": "node scripts/install-deps.js"
  },
  "keywords": [
    "im",
    "messenger",
    "electron",
    "react",
    "typescript"
  ],
  "author": "Group Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/react-redux": "^7.1.34",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.10.0",
    "electron": "^28.2.3",
    "electron-builder": "^24.9.3",
    "express": "^4.18.2",
    "html-webpack-plugin": "^5.6.6",
    "nodemon": "^3.0.3",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.0",
    "axios": "^1.6.7",
    "form-data": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.7.4",
    "ws": "^8.16.0"
  }
}
